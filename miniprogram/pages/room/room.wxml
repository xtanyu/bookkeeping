<van-popup bind:close="closeDetails" root-portal="true" round show="{{ showDetails }}" position="bottom" custom-style=" display: flex;justify-content: center;flex-wrap:wrap;" closeable close-icon="close">
  <van-empty wx:if="{{tansferDetails.length<1}}" style="height: 300px;padding-top: 15%;" description="暂无明细记录" />

  <scroll-view wx:else scroll-y="true" style="height: 320px;padding-top: 15%;width: 90%;">
    <view>
      <van-cell-group wx:for="{{tansferDetails}}" wx:key="detailsId">
        <van-cell center wx:if="{{item.payeeUserId === myPointInfoVo.userId}}">
          <view slot="title" style="padding-left: 10px;">
            <view style="color: rgb(255, 0, 0);font-size: 17px;">+{{item.points}}分</view>
            <view style="color: rgb(189, 189, 189);">{{item.time}}</view>
          </view>
          <view style="display: flex;align-items: center">
            来自
            <image class="image-container" style="margin: 4px;" src="{{item.payerUserAvatar}}" mode="aspectFill"></image>
            <view>
              <text class="hidden-text" style="font-weight: bold;font-size: 15px;color: rgb(0, 0, 0);">{{item.payerUserName}}</text>
            </view>
          </view>
        </van-cell>

        <van-cell center wx:if="{{item.payerUserId === myPointInfoVo.userId}}">
          <view slot="title" style="padding-left: 10px;">
            <view style="color: rgb(60, 255, 0);font-size: 17px;">-{{item.points}}分</view>
            <view style="color: rgb(189, 189, 189);">{{item.time}}</view>
          </view>
          <view style="display: flex;align-items: center">
            转给
            <image class="image-container" style="margin: 4px;" src="{{item.payeeUserAvatar}}" mode="aspectFill"></image>
            <view>
              <text class="hidden-text"  style="font-weight: bold;font-size: 15px;color: rgb(0, 0, 0);">{{item.payeeUserName}}</text>
            </view>
          </view>
        </van-cell>
      </van-cell-group>
    </view>
  </scroll-view>
</van-popup>

<van-toast id="van-toast" />

<van-share-sheet show="{{ showShare }}" title="邀请好友" options="{{ options }}" bind:select="onSelect" bind:close="onCloseShare" />


<van-dialog bind:close="codeClose" confirmButtonText="关闭" use-slot title="邀请好友扫码加入本房间" show="{{ showCode }}">
  <view style="width: 100%;display: flex;justify-content: center;padding-top: 5%;padding-bottom: 5%;">
    <image style="width: 500rpx;height: 500rpx;" src="{{roomCode}}" show-menu-by-longpress="true"/>
  </view>
</van-dialog>

