      </van-col>
    </van-row>
    <van-row style="margin-top: 2%;margin-bottom: 5%;">
      <van-col span="24">
        <van-button color="linear-gradient(to right, #4bb0ff, #6149f6)" custom-class="key-exchange-submit" size="normal" round bind:click="submitMoney">
