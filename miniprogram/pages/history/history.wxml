<!--pages/history/history.wxml-->
<view class="page-gradient">
  <div style="width: 100%;" custom-class="row-center">
    <van-row>
      <van-col custom-class="row-center" span="24">
        <button class="avatar-btn" open-type="chooseAvatar" bindchooseavatar="setHead">
          <div class="avatar-wrapper">
            <image class="avatar" src="https://bear-owo.oss-cn-shanghai.aliyuncs.com/head/head1.png" mode="aspectFill"></image>
          </div>
        </button>
      </van-col>
    </van-row>
    <van-row>
      <van-col custom-class="row-center" span="24">
        <div class="info-font">
          小小熊
        </div>
      </van-col>
    </van-row>
    <van-row>
      <van-col custom-class="row-center" span="12">
        <div class="row-center,info-font" style="color: rgb(233, 25, 25);">+20</div>
        <!-- <div class="row-center,info-font" style="color: green;">-20</div> -->
        <div class="des-font">累计积分</div>
      </van-col>
      <van-col custom-class="row-center" span="12">
        <div class="row-center,info-font">20</div>
        <div class="des-font" style="text-decoration: underline;">历史场次 ></div>
      </van-col>
    </van-row>
  </div>
</view>

<van-icon info="返回" class="exit-icon" name="revoke" size="25" bindtap="toLast" />


<view style="padding-bottom: 8px;display: flex;align-items: center;justify-content: center;  flex-wrap: wrap;">
  <van-cell-group inset style="width: 88%;" >
    <van-cell custom-class="round-top" size="large" title="头像" center icon="user-circle-o">
      <view style="display: flex;">
        <button style="border: 1px solid #fff;width: 60px;height: 45px;margin-right: -10%;display: flex;align-items: center;justify-content: center;" plain open-type="chooseAvatar" bindchooseavatar="setHead">
          <image  style="width: 30px;height: 30px;  border-radius: 50%;box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);" src="https://bear-owo.oss-cn-shanghai.aliyuncs.com/head/head2.png" mode="aspectFill"></image>
        </button>
        <van-icon name="arrow" />
      </view>
    </van-cell>
    <van-cell custom-class="round-bottom" size="large" title="昵称" center icon="coupon-o">
      <view  style="display: flex;">
        <input style="color: rgb(0, 0, 0);" class="input-style" type="text" placeholder="请输入昵称"/>
        <van-icon name="arrow" />
      </view>
    </van-cell>
  </van-cell-group>

  <van-cell-group inset style="width: 88%;padding-top: 5%;" >
    <van-cell custom-class="round-bottom round-top" size="large" title="免责声明" center icon="warning-o">
      <view>
        <van-icon name="arrow" />
      </view>
    </van-cell>
  </van-cell-group>

</view>

